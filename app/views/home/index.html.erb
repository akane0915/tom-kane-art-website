<div class="jumbotron">
  <div class="masthead-text-container">
    <div class="masthead-text">
      <h1>Tom Kane</h1>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<ul class="gallery grid effect-2" id="grid">

  <% @paintings.each do |painting| %>
    <div class="black <%= painting.style %>">
      <div class="image-container <%= painting.style %>" style="background-image: url(<%= painting.image %>);">

        <h3><%= painting.title %></h3>
      </div>
    </div>
  <% end %>

</ul>
