
<div id="payment-details-page">
  
  <h1>Payment Details</h1>
  <br>
  <div class="payment-form">
    <div class="container">
      <%= form_tag charges_path, method: 'post', id: 'charge-form' do %>
      <span class="charge-errors"></span>

      <label for="contact-information">Contact Information</label>
      <div class="form-group row">
        <div class="col-md-6">
          <%= text_field_tag :name, "", class: "form-control", placeholder: "Name" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input id="phone" class="form-control" type="text" placeholder="Phone (000-000-0000)"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input id="email" class="form-control" type="text" placeholder="Email Address"/>
        </div>
      </div>

      <label for="shipping-address">Shipping Address</label>
      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="Address Line 1 (Street Address, P.O. Box)"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="Address Line 2 (Apartment, Suite, Unit, Building, etc.)">
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="City"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="State/Province"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="Zip/Postal Code"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" placeholder="Country"/>
        </div>
      </div>


      <label for="credit-card-details">Credit Card Details</label>
      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" data-stripe="number" placeholder="Card Number"/>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <input class="form-control" type="text" data-stripe="cvc" placeholder="CVC"/>
        </div>
      </div>

      <div class="form-inline">
        <input class="form-control" type="text" size="4" data-stripe="exp-month" placeholder="MM"/>
        <span> / </span>
        <input class="form-control" type="text" size="6" data-stripe="exp-year" placeholder="YYYY"/>
      </div>

      <br>
      <button class="btn btn-default btn-lrg" type="submit">Submit Payment</button>
      <% end %>
    </div>
  </div>
</div>
