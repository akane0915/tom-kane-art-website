<!DOCTYPE html>
<html>
  <head>
    <title>Tom Kane Art</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'%>
    <%= render 'application/favicon' %>
  </head>

  <body>

    <div id="body">

      <%= render 'shared/navigation' %>
      <%= render 'shared/header' unless request.env['PATH_INFO'] == "/" %>

      <% if request.env['PATH_INFO'] == '/' %>
        <div id="yield">
          <% if current_admin %>
            <p>
              User: <%= current_admin.email %> | <%= link_to "Sign out", destroy_admin_session_path, method: 'delete' %> | <%= link_to "Paintings", paintings_path %>
            </p>
          <% end %>
          <%= yield %>
        </div>

      <% else %>

        <div class="yield-container">
          <div id="yield">

            <%= flash[:alert] %>
            <%= flash[:notice] %>

            <% if current_admin %>
              <p>
                User: <%= current_admin.email %> | <%= link_to "Sign out", destroy_admin_session_path, method: 'delete' %> | <%= link_to "Paintings", paintings_path %>
              </p>
            <% elsif request.env['PATH_INFO'] == "/admins/sign_in" %>
              <%= link_to "Sign up", new_admin_registration_path %> | <%= link_to "Sign in", new_admin_session_path %> | <%= link_to "Paintings", paintings_path %>
            <% end %>


            <%= yield %>
          </div>
        </div>
      <% end %>

    </div>
    <%= render 'shared/footer' %>
  </body>

</html>
