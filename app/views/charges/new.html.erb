<%= render "layouts/errors", :object => @charge %>

<div id="payment-details-page">

  <h1>Payment Details</h1>
  <br>
  <div class="payment-form">
    <div class="container">
      <%= form_for @charge, html: { id: 'charge-details-form' } do |f| %>
      <span class="charge-errors"></span>

      <label for="contact-information">Contact Information</label>
      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :name, placeholder: "Name", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :phone, placeholder: "Phone (000-000-0000)", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :email, placeholder: "Email Address", class: 'form-control' %>
        </div>
      </div>

      <label for="shipping-address">Shipping Address</label>
      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :address1, placeholder: "Address Line 1 (Street Address, P.O. Box)", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :address2, placeholder: "Address Line 2 (Apartment, Suite, Unit, Building, etc.)", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :city, placeholder: "City", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :state, placeholder: "State/Province", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :zip, placeholder: "Zip/Postal Code", class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-6">
          <%= f.text_field :country, placeholder: "Country", class: 'form-control' %>
        </div>
      </div>

      <%= f.submit "Proceed to Payment", class: "btn btn-default btn-lrg" %>
      <% end %>
    </div>
  </div>
</div>
