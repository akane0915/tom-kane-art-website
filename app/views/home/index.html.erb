<div class="jumbotron">
  <div class="masthead-text-container">
    <div id="overlay" class="masthead-text">
      <h1>Tom Kane</h1>
      <img id="arrow" src="http://mrcagroup.com/img/icon_downarrow.png">
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<ul class="gallery grid effect-2" id="grid">

  <% @paintings.each do |painting| %>
    <div class="image-container <%= painting.style %>">
      <%= image_tag("#{painting.image}", alt: "#{painting.title}") %>
    </div>
  <% end %>

</ul>
